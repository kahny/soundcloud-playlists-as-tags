<% include partials/header.ejs%>
   <h1>Login </h1>

	<% if (typeof message !== 'undefined') { %>
		<p style = "color:red;">
		<%= message %>
		</p>
	<% } %>

	<br>
		<form action="/login" method = "post">

			<p>
				<label for="user">Email:</label> <input type="text" name="email" id="user" autofocus value = <%=email %>>
			</p>
			<p>
				<label for="pass">Password:</label> <input type="password" name="password" id="pass">
			</p>
			<p>
				<input type="submit" value="Log In" class ="btn btn-primary ">
			</p>
		</form>
		<a href="/signup">Don't have an account? Create one here</a>	
<% include partials/footer.ejs%>